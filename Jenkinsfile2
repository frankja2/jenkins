pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                // Checkout code from the repository
                git url: 'https://github.com/frankja2/test2.git'
            }
        }
        stage('Display Workspace Contents') {
            steps {
                script {
                    // Display the contents of the Jenkins workspace
                    sh '''
                    echo "Contents of the Jenkins workspace:"
                    ls -la
                    '''                   
                }
            }
        }
        stage('Run Maven in Docker') {
            steps {
                script {
                    docker.image('my_maven:v1').inside {
                        sh 'ls -ltrha'
                        sh 'hostname'
                        sh 'ip a'
                    }
                }
            }
        }        
    }
}

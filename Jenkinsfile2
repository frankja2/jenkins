pipeline {
    agent none
    stages {
        stage('Run in Docker') {
            agent {
                docker {
                    image 'registry-gitlab.goodylabs.com/krka/singlepill-api:v2'
                }
            }
            steps {
                withCredentials([sshUserPrivateKey(credentialsId: 'jenkins', keyFileVariable: 'SSH_KEY')]) {
                    sh 'ssh -i $SSH_KEY ubuntu@130.61.34.16'
                }
            }
        }
    }
}

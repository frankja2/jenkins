pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                // Checkout code from the repository
                checkout scm
            }
        }
        stage('Display Workspace Contents') {
            steps {
                script {
                    // Display the contents of the Jenkins workspace
                    sh '''
                    echo "Contents of the Jenkins workspace:"
                    ls -la
                    '''                   
                }
            }
        }
        stage('Run Maven in Docker') {
            steps {
                script {
                    // Create a temporary writable directory in /tmp
                    def tempDir = "/tmp/jenkins-workspace"
                    sh "mkdir -p ${tempDir}"

                    // Copy the contents of the workspace to the temporary directory
                    sh "cp -r ${pwd()}/* ${tempDir}/"

                    // Run a Docker container with the temporary directory mounted
                    docker.image('bash:3.2.57').inside("-v ${tempDir}:${tempDir}") {
                        // Change directory to where the code is mounted
                        dir("${tempDir}") {
                            // Print the current directory inside the container
                            sh 'pwd'

                            // List the files in the directory to verify the mount
                            sh 'ls -la'
                        }
                    }
                }
            }
        }        
    }
}

pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                // Checkout code from the repository
                checkout scm
            }
        }
        stage('Build and Deploy with Docker') {
            steps {
                script {
                    sh '''
                    echo "Contents of the Jenkins workspace:"
                    ls -la
                    '''                   
                }
            }
        }
        stage('Run Maven in Docker') {
            steps {
                script {
                    def workspacePath = "/tmp/jenkins-workspace"
                    // Run an existing Docker container with the repo mounted
                    docker.image('docker pull bash:3.2.57').inside("-v ${workspacePath}:/app") {
                        // Change directory to where the code is mounted
                        dir('/app') {
                            // Execute Maven deploy inside the Docker container
                            sh 'pwd'
                        }
                    }
                }
            }
        }        
    }
}
